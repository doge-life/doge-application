{
    "variables": {
        "proxy_uname": "{{env `ASCENA_PROXY_UNAME`}}",
        "proxy_password": "{{env `ASCENA_PROXY_PASSWORD`}}",
        "proxy_host": "{{env `ASCENA_PROXY_HOST`}}",
        "proxy_port": "{{env `ASCENA_PROXY_PORT`}}"
    },
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu",
            "commit": true
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "downloads",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "scripts/install_java.sh",
            "environment_vars": [
                "PROXY_UNAME={{user `proxy_uname`}}",
                "PROXY_PASSWORD={{user `proxy_password`}}",
                "PROXY_HOST={{user `proxy_host`}}",
                "PROXY_PORT={{user `proxy_port`}}"
            ]
        }
    ]
}

