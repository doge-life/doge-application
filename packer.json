{
  "variables": {
    "proxy_uname": "{{env PROXY_UNAME}}",
    "proxy_password": "{{env PROXY_PASSWORD}}",
    "proxy_host": "{{env PROXY_HOST}}"
  },
	"builders": [
		{
				"type": "docker",
				"image": "ubuntu:14.04",
				"commit": true
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "scripts/install_java.sh",
      "environment_vars": ["PROXY_UNAME={{user `proxy_uname`}}",
                             "PROXY_PASSWORD={{user `proxy_password`}}",
                             "PROXY_HOST={{user `proxy_host`}}"]
		}
	]
}
